{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": ".",
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": false,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": false,
		"watch": false,
		"paths": {
			"~config": ["src/config"],
			"~config/*": ["src/config/*"],
			"~mocks": ["test/mocks"],
			"~mocks/*": ["test/mocks/*"],
			"~modules": ["src/modules"],
			"~modules/*": ["src/modules/*"],
			"~pkg": ["package.json"],
			"~shared": ["src/shared"],
			"~shared/*": ["src/shared/*"],
			"~src": ["src"],
			"~src/*": ["src/*"],
			"~test": ["test"],
			"~test/*": ["test/*"]
		}
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}
